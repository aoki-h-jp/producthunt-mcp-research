{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmitOnError": false,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@producthunt-mcp-research/shared": ["./shared/src/index.ts"],
      "@producthunt-mcp-research/shared/*": ["./shared/src/*"],
      "@producthunt-mcp-research/fetcher": ["./fetcher/src/index.ts"],
      "@producthunt-mcp-research/fetcher/*": ["./fetcher/src/*"],
      "@producthunt-mcp-research/repository": ["./repository/src/index.ts"],
      "@producthunt-mcp-research/repository/*": ["./repository/src/*"]
    }
  },
  "exclude": [
    "**/node_modules",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
